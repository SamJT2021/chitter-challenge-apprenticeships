<form method="post" action="/filtered-peeps">
  <input type="text" name="filter" placeholder="Search peeps by keyword" required>
  <input type="submit" value="Search">
</form>

<% @peeps.each_with_index do | peep, index |%>
  <section id=<%=index%>>
    <p> <%= peep.message %></p>
    <%= peep.username %> | <%= peep.date %></p> 
  </section>
<% end %>